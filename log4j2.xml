<?xml version="1.0" encoding="utf-8"?>
<Configuration status="WARN" monitorInterval="1">
  <Properties>
    <Property name="basePath">logs/</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss:SSS} %level{WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I} %-40.40logger - %msg%n" />
    </Console>

    <RollingFile name="fileLogger"
			fileName="${basePath}landing.log"
			filePattern="${basePath}/app-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="%d{HH:mm:ss:SSS} %level{WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I} %-40.40logger - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<!-- Max 10 files will be created everyday -->
			<DefaultRolloverStrategy max="10">
				<Delete basePath="${basePathr}" maxDepth="10">
					<!-- Delete all files older than 30 days -->
					<IfLastModified age="30d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="landing.core" additivity="false" level="WARN">
      <AppenderRef ref="fileLogger" />
    </Logger>
    <!-- <Logger name="automaton-core.duplex.message-handler" -->
    <!-- additivity="false" level="WARN"> -->
    <!--   <AppenderRef ref="Console" /> -->
    <!-- </Logger> -->
    <Root level="trace">
      <AppenderRef ref="fileLogger" />
    </Root>
  </Loggers>
</Configuration>
